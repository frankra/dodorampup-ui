<mvc:View controllerName="com.sap.CloudSCAME.dodorampup.view.master.Master" 
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns:core="sap.ui.core" 
    xmlns="sap.m">
    <Page title="Customers" id="idMasterPage" showHeader="true" floatingFooter="true">
        <content>
            <List items="{Users>/}">
                <StandardListItem title="{Users>name}" description="{Users>email}" type="Active" press="onUserSelected" />
            </List>
        </content>
        <footer>
            <Toolbar>
                <ToolbarSpacer/>
                <Button text="New" press="onNewTaskClicked" icon="sap-icon://create"/>
            </Toolbar>
        </footer>
        <dependents>
            <Dialog id="creationDialog">
                <content>
                    <core:Fragment fragmentName="com.sap.CloudSCAME.dodorampup.view.fragment.UserDataForm" type="XML"/>
                </content>
                <buttons>
                    <Button text="Save" press="handleSavePress" icon="sap-icon://save"/>
                    <Button text="Cancel" press="handleCancelPress" icon="sap-icon://cancel"/>
                </buttons>
            </Dialog>
        </dependents>
    </Page>
</mvc:View>
