<mvc:View controllerName="com.sap.CloudSCAME.dodorampup.view.detail.Detail" 
    xmlns:mvc="sap.ui.core.mvc"

    xmlns="sap.m">
    <Page title="Detail" id="idDetailPage" busy="{View>/Busy}" busyIndicatorDelay="0" floatingFooter="true">
        <content>
                <Label text="Name" labelFor="nameInput"/>
                <Input id="nameInput" required="true"/>

                <Label text="CPF" labelFor="cpfInput"/>
                <Input id="cpfInput" required="true" type="Number" maxLength="11"/>
                
                <Label text="Phone Number" labelFor="phoneNumberInput"/>
                <Input id="phoneNumberInput" type="Number"/>
                
                <Label text="Birth Date" labelFor="birthDateInput"/>
                <Input id="birthDateInput" type="Date"/>
                
                <Label text="E-mail" labelFor="emailInput"/>
                <Input id="emailInput" required="true" type="Email"/>
                
                <Label text="Adress" labelFor="adressInput"/>
                <Input id="adressInput"/>
                
                <Label text="Number" labelFor="addressNumberInput"/>
                <Input id="addressNumberInput" type="Number"/>
                
                <Label text="City" labelFor="cityInput"/>
                <Input id="cityInput"/>
                
                <Label text="State" labelFor="stateInput"/>
                <Input id="stateInput"/>
                
                <Label text="Country" labelFor="countryInput"/>
                <Input id="countryInput"/>
                
                <Label text="CEP" labelFor="cepInput"/>
                <Input id="cepInput" type="Number"/>
        </content>
        <footer>
            <Toolbar>
                <ToolbarSpacer/>
                <Button text="Edit" press="handleEditPress" icon="sap-icon://edit" visible="true"/>
                <Button text="Save" press="handleSavePress" icon="sap-icon://save" visible="false"/>
                <Button text="Cancel" press="handleCancelPress" icon="sap-icon://cancel" visible="false"/>
                <Button text="Delete" press="handleDeletePress" icon="sap-icon://delete" visible="true"/>
            </Toolbar>
        </footer>
    </Page>
</mvc:View>
